<UserControl x:Class="HealthCare.View.PatientView.SurveyHospitalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCare.View.PatientView"
        mc:Ignorable="d"
        Height="450" Width="940"
        xmlns:viewmodel="clr-namespace:HealthCare.ViewModel.PatientViewModell"
        xmlns:converters="clr-namespace:HealthCare.Converter">
    <UserControl.DataContext>
        <viewmodel:SurveyHospitalViewModel/>
    </UserControl.DataContext>
    <Grid>
        <ScrollViewer>
            <ItemsControl ItemsSource="{Binding Surveys}"
                  ItemTemplate="{StaticResource SurveySectionTemplate}" />
        </ScrollViewer>
        <Button Content="Posalji" Command="{Binding SubmitSurvey}"  Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
